<div
  class="modal fade js-sign-in-modal"
  tabindex="-1"
  aria-labelledby="signInModal"
  aria-hidden="true"
>

  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border">
      <div class="modal-header border-bottom">
        <h3 class="modal-title
          fs-6 fw-bold text-center
          w-100"
        >
          登入
          <span class="fw-light">
            sign in
          </span>
        </h3>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">

        <form action="">
          <ul class="mb-3.75">
            <li class="mb-2.5">
              <label
                for="userEmail"
                class="form-label mb-0.5"
                required
              >
                帳號
              </label>
              <input
                type="email"
                name="Email"
                placeholder="請輸入 Email"
                id="userEmail"
                class="form-control js-user-email"
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>
            </li>

            <li>
              <label
                for="userPassword"
                class="form-label mb-0.5"
              >
                密碼
              </label>
              <input
                type="password"
                name="密碼"
                placeholder="請輸入密碼"
                id="userPassword"
                class="form-control js-user-password"
                autocomplete="on"
                pattern='^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&]{1})[A-Za-z\d@#$!%*?&]{8,}$'
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>

              <div class="text-end">
                <button
                  type="button"
                  class="btn btn-sm
                    border__bottom__secondary
                    border-0 p-0 
                    shadow-none"
                >
                  忘記密碼 ?
                </button>
              </div>
            </li>
          </ul>

          <ul class="mb-2.5">
            <li class="mb-1">
              <button
                type="submit"
                class="btn btn-secondary
                  w-100 py-1.25"
              >
                登入
              </button>
            </li>

            <li class="mb-1">
              <a
                href="https://accounts.google.com/signin/v2/identifier?hl=zh-TW&passive=true&continue=https%3A%2F%2Fwww.google.com.tw%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin/"
                class="btn btn-outline-secondary
                  w-100 py-1.25"
              >
                Google 快速登入
              </a>
            </li>

            <li>
              <a
                href="https://zh-tw.facebook.com/login/web/"
                class="btn btn-outline-secondary
                  w-100 py-1.25"
              >
                Facebook 快速登入
              </a>
            </li>
          </ul>

          <ul>
            <li>
              <h3 class="modal-title
                fs-6 fw-bold text-center
                border-top py-1.25
                w-100"
              >
                沒有帳號？
              </h3>
            </li>

            <li>
              <button 
                type="button"
                class="btn btn-outline-primary
                  js-sign-up-modal-btn
                  w-100 py-1.25"
              >
                前往註冊
              </button>
            </li>
          </ul>
        </form>

      </div>
    </div>
  </div>
</div>


<div
  class="modal fade js-sign-up-modal"
  tabindex="-1"
  aria-labelledby="signUpModal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border">
      <div class="modal-header border-bottom">
        <h3 class="modal-title fs-6 fw-bold text-center w-100"
        >
          註冊
          <span class="fw-light">
            sign up
          </span>
        </h3>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">

        <form>
          <ul class="mb-5">
            <li class="mb-2.5">
              <label
                for="singUpUserEmail"
                class="form-label mb-0.5"
              >
                帳號
                <span class="text-danger">*</span>
              </label>
              <input
                type="email"
                name="Email"
                placeholder="請輸入 Email"
                id="singUpUserEmail"
                class="form-control js-user-email"
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>
            </li>

            <li class="mb-2.5">
              <label
                for="singUpUserPassword"
                class="form-label mb-0.5"
              >
                密碼
                <span class="text-danger">*</span>
              </label>
              <input
                type="password"
                name="密碼"
                placeholder="請輸入密碼"
                id="singUpUserPassword"
                class="form-control js-user-password"
                autocomplete="on"
                pattern='^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&]{1})[A-Za-z\d@#$!%*?&]{8,}$'
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>
            </li>

            <li class="mb-2.5">
              <label
                for="singUpUserName"
                class="form-label mb-0.5"
              >
                用戶名稱
                <span class="text-danger">*</span>
              </label>
              <input
                type="text"
                name="用戶名稱"
                placeholder="請輸入用戶名稱"
                id="singUpUserName"
                class="form-control js-user-name"
                pattern='^^[a-zA-Z\s\d]+$'
                minlength="2"
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>
            </li>

            <li>
              <label
                for="singUpUserPhone"
                class="form-label mb-0.5"
              >
                手機
                <span class="text-danger">*</span>
              </label>

              <input
                type="tel"
                name="手機"
                placeholder="請輸入手機號碼"
                id="singUpUserPhone"
                class="form-control js-user-phone"
                pattern="^09\d{8}$"
                maxlength="10"
                required
              >
              <p class="js-validate-msg
                validate-msg
                fs-8 text-danger text-end
                pt-0.5"
              ></p>
            </li>
          </ul>

          <ul class="mb-2.5">
            <li class="mb-1">
              <button
                type="submit"
                class="btn btn-secondary
                  w-100 py-1.25"
              >
                註冊
              </button>
            </li>

            <li class="mb-1">
              <a
                href="https://accounts.google.com/signin/v2/identifier?hl=zh-TW&passive=true&continue=https%3A%2F%2Fwww.google.com.tw%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin/"
                class="btn btn-outline-secondary
                  w-100 py-1.25"
              >
                Google 快速註冊
              </a>
            </li>

            <li>
              <a
                href="https://zh-tw.facebook.com/login/web/"
                class="btn btn-outline-secondary
                  w-100 py-1.25"
              >
                Facebook 快速註冊
              </a>
            </li>
          </ul>

          <ul>
            <li>
              <h3 class="modal-title
                fs-6 fw-bold text-center
                border-top py-1.25
                w-100"
              >
                已有帳號？
              </h3>
            </li>

            <li>
              <button 
                type="button"
                class="btn btn-outline-primary
                  js-sign-in-modal-btn
                  w-100 py-1.25"
              >
                前往登入
              </button>
            </li>
          </ul>

        </form>
      </div>
    </div>
  </div>
</div>


